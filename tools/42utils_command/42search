WHITE='\033[1;37m';
RED='\033[0;31m';

Search(){
	echo "${WHITE}I finded this files: ";
	find . -name $1 -print | awk 'END {print NR}'
	find . -name $1 -print
}

if [ "$1" != "" ]; then 
	Search $1;
else
	echo "${WHITE}42search help";
	echo "";
	echo "42search [file to search]";
fi

